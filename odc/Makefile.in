#
# Makefile for the package Odc
#

include ../makedirs
# (makedirs should define TCL_LIBDIR and MEX_LIBDIR)

O = @OBJ_SUFFIX@

.SUFFIXES: .c .C $O @LIB_SUFFIX@

#
# machine dependencies
#

#
# additional objects to create an executable
# 
TCL_LIBS = @TCL_LIBS@
FORTRAN_LIBS = @FORTRAN_LIBS@
MEX_LIBS = @MEX_LIBS@
MACH_OBJS = $(TCL_LIBS) @ODC_MACH_OBJS@ -lm

LFLAG = @LFLAG@
#
# flag to add a path for the run-time loader
# (e.g. -R -Wl,-rpath, -Wl,+b,)
# -- or just use $LFLAG resulting in no run-path
#    and make libtcl, libhqp, and libomu known through 
#    the environment variable LD_LIBRARY_PATH --
RFLAG = @RFLAG@

#
# paths 
#
HQP_PREFIX = @prefix@

HQP_INCDIR = -I.. -I../iftcl -I../hqp -I../adol-c/SRC -I../omu \
             -I../hxi -I${HQP_PREFIX}/include/hqp

HQP_LIBDIR = $(LFLAG)../lib $(RFLAG)../lib \
             $(LFLAG)${HQP_PREFIX}/lib $(RFLAG)${HQP_PREFIX}/lib

#
# compiler and flags
#

CXX = @CXX@
CC = @CC@

CFLAGS = @WFLAG@ -DDEBUG \
         ${HQP_INCDIR} ${TCL_INCDIR}

LDFLAGS = ${HQP_LIBDIR} ${TCL_LIBDIR} 

#
# machine independent part
#

GMALLOC_O = @GMALLOC_O@

ASRCS = Prg_Crane.C \
	Prg_CranePar.C \
	Prg_Maratos.C \
	Prg_HS99omu.C \
	Prg_HS99.C \
	Prg_TP383omu.C \
	Prg_TP383.C \
	Prg_Bio.C \
	Prg_DID.C \
	Prg_DID_SFunction.C \
	Prg_DIC_SFunction.C

SRCS = 	Odc_Init.C @ASRCS@

OBJS = $(SRCS:.C=$O) Odc_Main$O $(GMALLOC_O)

RESULT = odc

all: $(OBJS) Makefile
	$(CXX) -o $(RESULT) $(OBJS) \
	@LDFLAGS_START@ $(LDFLAGS) @LDLIB_PREFIX@omu@LDLIB_SUFFIX@ \
	@LDLIB_PREFIX@hqp@LDLIB_SUFFIX@ $(MACH_OBJS)

gmalloc $(GMALLOC_O): $(GMALLOC_O:$O=.c)
	PWD=`pwd`; cd `dirname $(GMALLOC_O)`; \
	make `basename $(GMALLOC_O)`; cd $(PWD)

.C$O:
	$(CXX) -c @CXXFLAGS@ $(CFLAGS) $<

.c$O:
	$(CC) -c $(CFLAGS) $<

clean:
	rm -f $(RESULT)@EXE_SUFFIX@ *.o *.obj *.[pi]db *.ilk \
	  *~ *core *.stackdump control.plt

depend:
	makedepend -- $(CFLAGS) -- $(SRCS)

